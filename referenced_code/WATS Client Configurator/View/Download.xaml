<Window x:Class="Virinco.WATS.Client.Configurator.View.Download"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Virinco.WATS.Client.Configurator.ViewModel" 
        Title="Download WATS Client" 
        Height="150" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="{StaticResource WatsBackground}">
    <Window.DataContext>
        <vm:DownloadViewModel x:Name="vm"/>
    </Window.DataContext>    

    <StackPanel>
        <Label Content="Downloading new WATS Client"  Style="{StaticResource SectionHeaderLabel}" FontSize="15" Margin="5,5,10,5" />
        <ProgressBar Height="20" HorizontalAlignment="Stretch" Margin="10,5,10,5" Value="{Binding Path=Progress, Mode=OneWay}" SmallChange="0.001" LargeChange="0.01" Maximum="1" />
        <Grid Margin="10,5,10,5">
            <TextBlock Text="{Binding Path=ProgressText, Mode=OneWay}" Style="{StaticResource SectionLabel}" HorizontalAlignment="Left"/>
            <Button Content="CANCEL" Click="Cancel" HorizontalAlignment="Right" />
        </Grid>
    </StackPanel>
</Window>
