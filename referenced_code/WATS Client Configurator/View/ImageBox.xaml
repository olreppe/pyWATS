<Window x:Class="Virinco.WATS.Client.Configurator.View.ImageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageBox" Height="Auto" Width="Auto" ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" 
        Icon="/Virinco.WATS.Client.Configurator;component/Images/RebrandIcons/favicon.ico" 
        Background="{StaticResource WatsBackground}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="TextBoxMessage" Margin="5" Style="{StaticResource SectionLabel}" />
        <Image Grid.Row="1" x:Name="ImageViewer" Margin="5" Stretch="None" />
        <Button Grid.Row="2" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="OK" Click="ButtonOK_Click" Width="100" />
    </Grid>
</Window>
