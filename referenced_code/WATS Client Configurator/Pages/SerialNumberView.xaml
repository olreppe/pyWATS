<UserControl x:Class="Virinco.WATS.Client.Configurator.Pages.SerialNumberView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virinco.WATS.Client.Configurator.Pages" 
             xmlns:prod="clr-namespace:Virinco.WATS.Interface.MES.Production;assembly=Virinco.WATS.ClientAPI" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="OpenSans" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Margin="3" Text="Serial number handler" Style="{StaticResource ConfigPageHeader}"/>
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47.148" />
                <ColumnDefinition Width="30.232"/>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8" ItemsSource="{Binding SerialNumberTypes, Mode=OneTime}" SelectedItem="{Binding SelectedSerialNumberType, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type prod:SerialNumberType}">
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Status" Grid.ColumnSpan="2" />
            <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="6" Text="{Binding Status}" Margin="10,0,0,0" />

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Reuse" Grid.ColumnSpan="2" />
            <CheckBox Grid.Row="3" Grid.Column="2" IsChecked="{Binding Reuse}" IsEnabled="{Binding ReuseEnabled}" Style="{StaticResource CheckBoxStyle}" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2"/>

            <TextBlock Grid.Row="4" Grid.Column="4" Text="Batch size" Grid.ColumnSpan="2" Margin="20,0,0,0" />
            <TextBox Grid.Row="3" Grid.Column="6" Text="{Binding BatchSize}" IsEnabled="{Binding ReserveOffline}" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2" />

            <TextBlock Grid.Row="6" Grid.Column="0" Text="Reserve offline" Grid.ColumnSpan="2" />
            <CheckBox Grid.Row="5" Grid.Column="2" IsChecked="{Binding ReserveOffline}" Style="{StaticResource CheckBoxStyle}" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2" />

            <TextBlock Grid.Row="6" Grid.Column="4" Text="Fetch when less than" Grid.ColumnSpan="2" Margin="20,0,0,0" />
            <TextBox Grid.Row="5" Grid.Column="6" Text="{Binding FetchWhenLessThan}" IsEnabled="{Binding ReserveOffline}" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2" />

            <TextBlock Grid.Row="8" Grid.Column="0" Text="In sequence" Grid.ColumnSpan="2" />
            <CheckBox Grid.Row="7" Grid.Column="2" IsChecked="{Binding InSequence}" Style="{StaticResource CheckBoxStyle}" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2" />

            <TextBlock Grid.Row="8" Grid.Column="4" Text="Start from" Grid.ColumnSpan="2" Margin="20,0,0,0" />
            <TextBox Grid.Row="7" Grid.Column="6" Text="{Binding StartFromSerialNumber}" Grid.ColumnSpan="2" Margin="10,10,0,0" Grid.RowSpan="2" />
        </Grid>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Content="{Binding InitializeButtonText}" Margin="5,0" Command="{Binding InitializeCommand}" IsEnabled="{Binding IsDirty}" Width="100"/>
            <Button Content="Cancel reserved" Command="{Binding CancelReservedCommand}" IsEnabled="{Binding CancelReservedEnabled}" Width="120" />
        </StackPanel>
        <DataGrid Grid.Row="6" ItemsSource="{Binding LocalSerialNumbers}" HeadersVisibility="Column" SelectionUnit="FullRow" SelectionMode="Single" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Serial number" Binding="{Binding SerialNumber}" Width="*" />
                <DataGridCheckBoxColumn Header="Taken" Binding="{Binding Taken}" Width="Auto" />
            </DataGrid.Columns>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="VerticalContentAlignment" Value="Bottom"/>
                    <Setter Property="Height" Value="24"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource WatsBackground}" />
                            <Setter Property="Foreground" Value="{StaticResource WatsButtonForeground}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#2D2D2D"/>
                    <Setter Property="Foreground" Value="#EEEEEE"/>
                    <Setter Property="Height" Value="24"/>
                    
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="Red" />
                            <Setter Property="BorderThickness"
                        Value="0" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</UserControl>
