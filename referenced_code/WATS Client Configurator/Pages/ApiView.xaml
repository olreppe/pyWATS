<UserControl x:Class="Virinco.WATS.Client.Configurator.Pages.ApiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:Virinco.WATS.Client.Configurator.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="350"
             DataContext="{Binding Config, Source={StaticResource Locator}}" >
    <StackPanel >
        <TextBlock Margin="3" Text="{x:Static res:Strings.Cfg_TDM_API_Heading}" Style="{StaticResource ConfigPageHeader}" />
        <TextBlock Text="{x:Static res:Strings.Cfg_TDM_API_Description}" TextWrapping="Wrap" Style="{StaticResource ConfigDescription}" Margin="3,0,30,0" />
        <TextBlock Margin="3.0,10,180.743,0" Height="22.5">
            <Hyperlink Click="Link_Click" Style="{StaticResource HyperLink}">
                <Run Text="WATS .NET API Documentation"/>
            </Hyperlink>
        </TextBlock>
        <TextBlock Name="FailMessage" Margin="3" Style="{StaticResource ConfigDescription}" Visibility="Hidden" TextWrapping="Wrap"><Run Text="Could not find file at"/><Run Text=" specified location: C:\Program Files\Virinco\WATS\"/></TextBlock>
    </StackPanel>
</UserControl>
