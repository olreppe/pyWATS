<UserControl x:Class="Virinco.WATS.Client.Configurator.Pages.SWDistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:res="clr-namespace:Virinco.WATS.Client.Configurator.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="350" >
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Margin="3" Text="{x:Static res:Strings.Cfg_MES_SW_Heading}" Style="{StaticResource ConfigPageHeader}" />
        <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="3,0,30,0">
                <Grid DataContext="{Binding Config}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" VerticalAlignment="Center" Grid.Column="0" Text="{x:Static res:Strings.Cfg_MES_SW_root_name}" Style="{StaticResource SectionLabel}" />
                    <TextBox Grid.Row="0" Grid.Column="2" Name="textBoxRootFolder" Text="{Binding Path=MESSWDistRoot, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Grid.Row="0" Grid.Column="4" Name="button1" Content="Browse" Width="64" Click="button1_Click" />
                    
                    <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Text="{x:Static res:Strings.Cfg_MES_SW_root_Description}" TextWrapping="Wrap" Style="{StaticResource ConfigDescription}" />
                </Grid>
                <Expander Header="{x:Static res:Strings.Cfg_AdvOptText}" Margin="0,15,0,0">
                    <Grid Margin="5,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"  />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="{x:Static res:Strings.Cfg_MES_SW_chunksize_Name}" Style="{StaticResource SectionLabel}"/>
                        <TextBox Grid.Row="0" Grid.Column="2" Name="textBoxChunksize" Text="{Binding Path=MESFileTransferChunkSize, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{x:Static res:Strings.Cfg_MES_SW_chunksize_Description}" TextWrapping="Wrap" Style="{StaticResource ConfigDescription}" />
                    </Grid>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
