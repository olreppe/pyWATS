<UserControl x:Class="Virinco.WATS.Client.Configurator.Pages.GPSSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virinco.WATS.Client.Configurator.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Margin="3" Text="{Binding Name}" Style="{StaticResource ConfigPageHeader}"/>
            <Grid HorizontalAlignment="Stretch" Margin="0,0,30,0" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="65" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="32" />
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Location status" Style="{StaticResource SectionLabel}" />
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ServiceStatus}" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SectionLabel}" />
                <Button Grid.Row="0" Grid.Column="4" Content="Refresh" Command="{Binding CheckServiceEnabledCommand}" IsEnabled="{Binding IsServiceAvailable}" />

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Location settings" HorizontalAlignment="Right" Style="{StaticResource SectionLabel}" />
                <Button Grid.Row="2" Grid.Column="4" Content="Open" Command="{Binding OpenSettingsCommand}" IsEnabled="{Binding IsServiceAvailable}" />

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Track GPS" Style="{StaticResource SectionLabel}" />
                <CheckBox Grid.Row="4" Grid.Column="4" IsChecked="{Binding GPSEnabled}" HorizontalAlignment="Center" IsEnabled="{Binding IsServiceEnabled}" Style="{StaticResource CheckBoxStyle}" />

                <TextBlock Grid.Row="6" Grid.Column="0"  Text="Coordinates" VerticalAlignment="Center" Style="{StaticResource SectionLabel}" />
                <TextBox Grid.Row="6" Grid.Column="2" Text="{Binding Coordinates}" IsReadOnly="True" IsEnabled="{Binding GPSEnabled}" />
                <Button Grid.Row="6" Grid.Column="4" Content="{Binding GPSButtonText}" Command="{Binding GPSButtonCommand}" IsEnabled="{Binding GPSButtonEnabled}" />

            </Grid>
        </StackPanel>        
    </Grid>
</UserControl>
