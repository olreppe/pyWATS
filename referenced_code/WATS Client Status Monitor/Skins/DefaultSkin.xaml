<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:System="clr-namespace:System;assembly=mscorlib">

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="5,0,0,5" />
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style TargetType="{x:Type Hyperlink}">
        <Setter Property="Foreground" Value="#fdb801"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="FooterText" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#D6D7D8"/>        
    </Style>
    <Style TargetType="{x:Type Button}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    
    <Style x:Key="DarkButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Background" Value="#FF494949" />
        <Setter Property="Foreground" Value="#FFD6D7D8" />
    </Style>

    <Style x:Key="LightButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Background" Value="#FFFDB801" />
        <Setter Property="Foreground" Value="#FF000000" />
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Verdana"/>
        <Setter Property="Background" Value="#282828" />
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
</ResourceDictionary>