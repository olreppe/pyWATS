<UserControl x:Class="Virinco.WATS.Client.StatusMonitor.UserControls.Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Virinco.WATS.Client.StatusMonitor.UserControls"            
             xmlns:vm="clr-namespace:Virinco.WATS.Client.StatusMonitor.ViewModel"
             d:DesignHeight="140"  mc:Ignorable="d"
        DataContext="{Binding Log, Source={StaticResource Locator}}" Width="406" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Skins/DefaultSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel Margin="0,0,19,0">

        <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="grid1"  Opacity="1" Width="400" Height="140" VerticalAlignment="Top" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="72" />
                <ColumnDefinition Width="67" />
                <ColumnDefinition Width="106" />
                <ColumnDefinition Width="68" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Exception" Grid.Column="1" Grid.Row="0" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="59"/>
            <TextBlock Text="Log file :" Grid.Column="2" Grid.Row="0" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="57" Margin="10,0,0,5" />
            <TextBlock x:Name="labelException" Text="{Binding Path=ExceptionCount}" Grid.Column="3" Grid.Row="0" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="15" Margin="8,0,0,5"/>
            <Button x:Name="buttonShowEx" Grid.Row="0" Grid.Column="3" Click="showExButton_Click" Content="Show exceptions" Visibility="{Binding StartServiceVisibility, Mode=OneWay}" Margin="71,5,-26,3.157" Padding="0,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="16.843" Grid.ColumnSpan="2" />


            <TextBlock Text="Converter" Grid.Column="1" Grid.Row="2" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="59"/>
            <TextBlock Text="One      :" Grid.Column="2" Grid.Row="2" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="62"/>
            <TextBlock  x:Name="labelConverterOne" Text="{Binding Path=ConverterOne}" Grid.Column="3" Grid.Row="2" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="94" Margin="8,0,0,5"/>
            <TextBlock  x:Name="labelConverterOneCount" Text="{Binding Path=ConverterOneCount}" Grid.Column="4" Grid.Row="2" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Margin="8,5,35,0" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
            <TextBlock Text="error(s)" Grid.Column="4" Grid.Row="2" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="62" Margin="59,0,-53,5"/>

            <TextBlock Text="Converter" Grid.Column="1" Grid.Row="3" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="59"/>
            <TextBlock Text="Two      :" Grid.Column="2" Grid.Row="3" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="56"/>
            <TextBlock  x:Name="labelConverterTwo" Text="{Binding Path=ConverterTwo}" Grid.Column="3" Grid.Row="3" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Margin="8,0,0,5" HorizontalAlignment="Stretch"/>
            <TextBlock  x:Name="labelConverterTwoCount" Text="{Binding Path=ConverterTwoCount}" Grid.Column="4" Grid.Row="3" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="94" Margin="8,0,-34,5"/>
            <TextBlock Text="error(s)" Grid.Column="4" Grid.Row="3" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="62" Margin="59,0,-53,5"/>

            <TextBlock Text="Converter" Grid.Column="1" Grid.Row="4" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="59"/>
            <TextBlock Text="Three   :" Grid.Column="2" Grid.Row="4" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="56"/>
            <TextBlock  x:Name="labelConverterThree" Text="{Binding Path=ConverterThree}" Grid.Column="3" Grid.Row="4" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="94" Margin="8,0,0,5"/>
            <TextBlock  x:Name="labelConverterThreeCount" Text="{Binding Path=ConverterThreeCount}" Grid.Column="4" Grid.Row="4" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="94" Margin="8,0,-34,5"/>
            <TextBlock Text="error(s)" Grid.Column="4" Grid.Row="4" Style="{StaticResource ClientMonitorTextStyle}" Height="15" Width="62" Margin="59,0,-53,5"/>

            <TextBlock x:Name="labelLogFile" Grid.Column="2" Margin="10,5,6,20" Grid.RowSpan="2" Grid.Row="1">
                <Hyperlink x:Name="labelHyperlink" NavigateUri="{Binding Path=WatsLOGFileName}" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#FF0066CC">wats.log</Hyperlink>
            </TextBlock>
            <Button x:Name="buttonResetStatus" Grid.Column="3" Click="resetButton_Click" Content="Reset status" Visibility="{Binding StartServiceVisibility, Mode=OneWay}" Margin="88,4,-26,3.907" Padding="0,0,0,0" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="17.093" Grid.Row="1" Grid.ColumnSpan="2" />
        </Grid>

    </DockPanel>
</UserControl>
