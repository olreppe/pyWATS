<Window x:Class="WATS_Client_Service_DebugApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="177.318" Width="515.728">
    <Grid>
        <Label Content="Service Status" Height="28" HorizontalAlignment="Left" Margin="12,9,0,0" Name="lblStatus" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="96.888,17,0,0" Name="txtStatus" VerticalAlignment="Top" Width="120" Text="Unknown" />
        <Label Content="API Status" Height="28" HorizontalAlignment="Left" Margin="12,46,0,0" Name="lblAPIStatus" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="96.888,51,0,0" Name="txtAPIStatus" VerticalAlignment="Top" Width="120" Text="Unknown" />
        <Button Content="Start" Height="23" HorizontalAlignment="Left" Margin="241,11.5,0,0" Name="btnStart" VerticalAlignment="Top" Width="75" Click="btnStart_Click" IsEnabled="{Binding}" />
        <Button Content="Stop" Height="23" HorizontalAlignment="Left" Margin="322,11.5,0,0" Name="btnStop" VerticalAlignment="Top" Width="75" IsEnabled="{Binding}" Click="btnStop_Click" />
        <Button Content="Pause" Height="23" HorizontalAlignment="Left" Margin="406.569,11.5,0,0" Name="btnPause" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="btnPause_Click" />
        <Button Content="Refresh" Height="23" HorizontalAlignment="Left" Margin="241,51,0,0" x:Name="btnRefresh" VerticalAlignment="Top" Width="75" Click="BtnRefresh_Click" IsEnabled="{Binding}" />
    </Grid>
</Window>
