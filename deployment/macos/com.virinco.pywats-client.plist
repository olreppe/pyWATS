<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Service identifier -->
    <key>Label</key>
    <string>com.virinco.pywats-client</string>
    
    <!-- Program to run -->
    <key>ProgramArguments</key>
    <array>
        <string>/Applications/pyWATS Client.app/Contents/MacOS/pyWATS Client</string>
        <string>--headless</string>
    </array>
    
    <!-- Run at load (login for LaunchAgents, boot for LaunchDaemons) -->
    <key>RunAtLoad</key>
    <true/>
    
    <!-- Keep alive - restart if exits -->
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <!-- Throttle interval (seconds between restart attempts) -->
    <key>ThrottleInterval</key>
    <integer>10</integer>
    
    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>/Applications/pyWATS Client.app</string>
    
    <!-- Log files -->
    <key>StandardOutPath</key>
    <string>/var/log/pywats/stdout.log</string>
    <key>StandardErrorPath</key>
    <string>/var/log/pywats/stderr.log</string>
    
    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PYWATS_HEADLESS</key>
        <string>1</string>
        <key>PYWATS_CONFIG_DIR</key>
        <string>~/Library/Application Support/pyWATS</string>
    </dict>
    
    <!-- Resource limits -->
    <key>SoftResourceLimits</key>
    <dict>
        <key>NumberOfFiles</key>
        <integer>1024</integer>
    </dict>
    
    <!-- Network wait (wait for network before starting) -->
    <key>NetworkState</key>
    <true/>
    
    <!-- Nice value (lower priority) -->
    <key>Nice</key>
    <integer>5</integer>
    
    <!-- Process type (background service) -->
    <key>ProcessType</key>
    <string>Background</string>
</dict>
</plist>
